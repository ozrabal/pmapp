---
import Layout from "../../layouts/Layout.astro";
import { LoginForm } from "../../components/auth/LoginForm";

// Page is rendered server-side
export const prerender = false;

// Get redirect URL from query params
const redirect = Astro.url.searchParams.get("redirect") || "/dashboard";

// If user is already logged in, redirect to dashboard
// Important: Always use auth.getUser() for secure authentication
const {
  data: { user },
} = await Astro.locals.supabase.auth.getUser();
if (user) {
  return Astro.redirect("/dashboard");
}
---

<Layout title="Logowanie | Plan My App">
  <div class="flex min-h-screen items-center justify-center px-4 py-12 sm:px-6 lg:px-8">
    <div class="w-full max-w-md space-y-8">
      <div class="text-center">
        <h1 class="text-3xl font-bold">Logowanie</h1>
        <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Zaloguj się do swojego konta, aby kontynuować</p>
      </div>

      <div class="mt-8 rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-800 dark:bg-gray-900">
        <LoginForm redirect={redirect} client:load />
      </div>

      <div class="text-center text-sm">
        <p>
          Nie masz jeszcze konta?{" "}
          <a href="/auth/register" class="font-medium text-primary hover:underline"> Zarejestruj się </a>
        </p>
        <p class="mt-2">
          <a href="/auth/reset-password" class="font-medium text-primary hover:underline"> Zapomniałeś hasła? </a>
        </p>
      </div>
    </div>
  </div>
</Layout>
